@model IEnumerable<QuestGame.WebMVC.Areas.Game.Models.StageViewModel>
@using QuestGame.WebMVC.Helpers;

@{
    ViewBag.Title = "Design";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading"><h2>Сцены</h2></div>
        <div class="panel-body">
            <div class="btn btn-group">
                @Html.ActionLink("Добавить сцену", "Create", "Stage", new { @class = "btn btn-primary btn-lg" })
                @Html.ActionLink("Назад", "Index", "Quest", new { area = "Game" }, new { @class = "btn btn-default btn-lg" })
            </div>
        </div>
        @{
            if (!Model.Any())
            {
                <p>У этого квеста пока нет сцен...</p>
            }
            else
            {
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.Cover)</th>
                            <th>@Html.DisplayNameFor(x => x.Title)</th>
                            <th>@Html.DisplayNameFor(x => x.Body)</th>
                            <th>@Html.DisplayNameFor(x => x.Point)</th>
                            <th>Действие</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stage in Model)
                        {
                            <tr>
                                <td><img src=@stage.Cover alt="cover" height="100" width="100" /></td>
                                <td>@Html.ActionLink(stage.Title, "Details", new {id = stage.Id}, null)</td>
                                <td>@stage.Body</td>
                                <td>@stage.Point</td>
                                <td>
                                    <a href=@Url.Action("Details", "Stage", new {id = stage.Id}, null)><span class="glyphicon glyphicon-info-sign"></span></a>
                                    <a href=@Url.Action("Edit", "Stage", new {id = stage.Id}, null)><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a href=@Url.Action("Delete", "Stage", new {id = stage.Id}, null)><span class="glyphicon glyphicon-remove-circle"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
</div>