@model QuestGame.WebMVC.Areas.Game.Models.StageViewModel

@{
    ViewBag.Title = "Edit Stage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Редактирование сцены</h2>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Edit", "Stage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.Motions)
                @Html.HiddenFor(x => x.QuestId)
                @Html.HiddenFor(x => x.Cover)

                <div class="col-md-12">
                    <dl class="dl-horizontal col-md-6">
                        <dt>
                            @Html.DisplayNameFor(n => n.Cover)
                        </dt>
                        <dd>
                            <img src=@Model.Cover alt="cover" />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(n => n.Title)
                        </dt>
                        <dd>
                            @Html.EditorFor(t => t.Title, new {@class = "form-control"})
                            @Html.ValidationMessageFor(v => v.Title)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(n => n.Body)
                        </dt>
                        <dd>
                            @Html.EditorFor(t => t.Body)
                            @Html.ValidationMessageFor(v => v.Body)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(n => n.Point)
                        </dt>
                        <dd>
                            @Html.EditorFor(t => t.Point)
                            @Html.ValidationMessageFor(v => v.Point)
                        </dd>
                    </dl>
                    <div class="col-md-6">
                        <p>Изменить обложку</p>
                        <input type="file" name="file" />
                    </div>
                </div>
                <div class="list-group">
                    @Html.ActionLink("Добавить действие", "Create", "Motion", new { area = "Design", id = @Model.Id }, new { @class = "btn btn-primary" })
                </div>
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>Название действия</th>
                        <th>Меню</th>
                    </tr>
                    @foreach (var motion in Model.Motions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => motion.Value)
                            </td>
                            <td>
                                <a href=@Url.Action("Details", "Motion", new { id = motion.Key }, null)><span class="glyphicon glyphicon-info-sign"></span></a>
                                <a href=@Url.Action("Edit", "Motion", new { id = motion.Key }, null)><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href=@Url.Action("Delete", "Motion", new { id = motion.Key }, null)><span class="glyphicon glyphicon-remove-circle"></span></a>
                            </td>
                        </tr>
                    }
                </table>
                <div class="btn-group">
                    <input type="submit" class="btn btn-primary" value="Сохранить" />
                    @Html.ActionLink("Назад", "Details", "Stage", new { area = "Design", id = @Model.Id }, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}