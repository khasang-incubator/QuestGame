@{
    Layout = "";
}
@{
    ViewBag.Title = "View";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Styles.Render("~/bundles/LandingStyles")
    @Scripts.Render("~/bundles/LandingScripts")

    @*@Styles.Render("~/Content/HomeCSS/LandingPage.css")
    @Scripts.Render("~/Content/HomeJS/backgroundLP.js")*@

    <SCRIPT type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></SCRIPT>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Главная", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Session["User"] != null)
                        {
                            <li>@Html.ActionLink("Play Game", "Index", "MainPage", new { area = "Game" }, null)</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        <div id="firstBlock" class="fullPage">
            <br />
            <div id="logo">Quest Game</div>
            <br />
            <div id="mini-text">браузерная квестовая игра</div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <input type="button" value="Начать игру!" id="startButton" onclick="location.href='@Url.Action("Index","Home")'" />
        </div>
        @* Slider____________________________________________________________________________________________________________________________________________________ *@
        <div class="slider">
            <div class="next"></div>
            <div class="prev"></div>
            <div class="slides">
                <div class="slide">
                    <div id="thirdBlock_0" class="fullPageSlide">
                        <br />
                        <div class="containerAbout">
                            <div class="boxAbout">
                                <br />
                                <br />
                                <div><div id="devName">Примите участие во <br /> множестве увлекательных историй</div></div><br /><br /><br /><br />
                                <div><img src="~/Content/Files/about/play.jpg" width="400" height="200" /></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slide">
                    <div id="thirdBlock_1" class="fullPageSlide">
                        <br />
                        <br />
                        <div class="containerAbout">
                            <div class="boxAbout">
                                <br />
                                <div><div id="devName">Создайте собственную историю</div></div><br /><br /><br /><br />
                                <div><img src="~/Content/Files/about/write.jpg" width="400" height="200" /></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slide">
                    <div id="thirdBlock_2" class="fullPageSlide">
                        <br />
                        <br />
                        <div class="containerAbout">
                            <div class="boxAbout">
                                <br />
                                <div><div id="devName">Возглавьте таблицу лидеров <br /> и соревнуйтесь с друзьями</div></div><br /><br /><br /><br />
                                <div><img src="~/Content/Files/about/top.jpg" width="400" height="200" /></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Slider____________________________________________________________________________________________________________________________________________________ *@
                        <div id="secondBlock" class="fullPage">
                            <br />
                            <div id="titleNew">Разработчики</div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <div class="containerPhotos">
                                <div class="boxPhotos">
                                    <div><img src="~/Content/Files/Photos/Ilya.png" width="200" height="200" /> <br /> <div id="devName">Илья Иджян</div></div>
                                    <div><img src="~/Content/Files/Photos/Ruslan.png" width="200" height="200" /><br /> <div id="devName">Руслан Лихобаба</div></div>
                                    <div><img src="~/Content/Files/Photos/Vladimir.png" width="200" height="200" /><br /> <div id="devName">Владимир Новоженов</div></div>
                                </div>
                            </div>
                        </div>
                        <div id="fouthBlock" class="fullPage">
                            <br />
                            <div id="titleNew">О движке игры</div>
                            <br />
                            <div id="micro-text">
                                Были использованы и применены следующие технология и решения:
                                <br />
                                <br />
                                <div id="markers">
                                    <ul>
                                        <li>Asp.Net MVC</li>
                                        <li>Asp.Net WebApi</li>
                                        <li>Entity Framwork</li>
                                        <li>Ninject</li>
                                        <li>MS SQL</li>
                                        <li>Паттерны проектирования (UoW, Repository)</li>
                                        <li>Dependency InjectionI и Inversion of Control</li>
                                        <li>
                                            Особое внимание уделено тестированию. <br />
                                            Использованные при этом библиотеки: MS TEST и Selenium
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div id="fifthBlock" class="fullPage">
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <input type="button" value="Начать игру!" id="startButton" onclick="location.href='@Url.Action("Login","Home")'" />
                        </div>
                        <footer>
                            <div id="micro-text">
                                Расскажи друзьям о нашем проекте &nbsp;  &nbsp; &nbsp; &nbsp;
                                <script src="//yastatic.net/es5-shims/0.0.2/es5-shims.min.js"></script>
                                <script src="//yastatic.net/share2/share.js"></script>
                                <div class="ya-share2" data-services="vkontakte,facebook,odnoklassniki,twitter"></div>
                            </div>
                        </footer>
     </div>
</body>
</html>


