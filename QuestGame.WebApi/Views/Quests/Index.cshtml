@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row jumbotron">
    <h2>Список всех квестов</h2>
</div>
<div class="row">
    <a href="#">
    <div class="col-sm-3">
        <div class="thumbnail">
            <img src="http://isot.bmstu.ru/assets/templates/main/images/pkp/plus.png" style="width:100px">
            <div class="caption">
                <h3 style="margin: 0 auto">Добавить Квест</h3>
            </div>
        </div>
    </div>
    </a>
    @foreach (var Item in ViewBag.Quests)
    {
        <div class="col-sm-3">
            <div class="thumbnail">
                <img src="http://www.novelupdates.com/img/noimagefound.jpg" style="width:100px">
                <div class="caption">
                    <h3>@Item.Title</h3>
                    <p>@Item.Content.Text</p>
                    <p><a href="#" class="btn btn-primary" role="button">Кнопка</a> <a href="#" class="btn btn-default" role="button">Кнопка</a></p>
                </div>
            </div>
        </div>
    }

</div>