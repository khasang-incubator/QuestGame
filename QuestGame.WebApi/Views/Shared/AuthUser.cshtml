
@{
    var user = Session["UserInfo"] as QuestGame.WebApi.Models.UserViewModels.UserProfileVM;
}

@if (user != null)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            @if (user.Name != null || user.LastName != null)
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@user.Name @user.LastName<b class="caret"></b></a>
            }
            else
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@user.Email<b class="caret"></b></a>
            }

            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Профиль", "Index", "UserProfile", new { area = "Admin" }, null)</li>
                <li>@Html.ActionLink("Мои Квесты", "Index", "Quests", new { area = "Admin" }, null)</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Выход", "Logout", "Home", new { area = "" }, null)</li>
            </ul>
        </li>
        <li>@Html.ActionLink("Выход", "Logout", "Home", new { area = "" }, null)</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Index", "Register", new { area = "" }, null)</li>
        <li>@Html.ActionLink("Авторизация", "Login", "Home", new { area = "" }, null)</li>
    </ul>
}