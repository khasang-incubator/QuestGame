@model IEnumerable<QuestGame.Domain.DTO.QuestDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row page-header">
    <h2>@ViewBag.Title</h2>
</div>

<div class="row">
    @Html.ActionLink("Добавить Квест", "AddQuest", "Quests", new { @class = "btn btn-primary btn-lg" })
    <hr/>
</div>

<br /><br />
    <div class="row">
        <div class="card-columns card-columns-quests">
            @foreach (var Item in Model)
            {
                <div class="card card_quest" style="margin-bottom: 20px">
                    <div class="card-img-title" style="background: url(@Item.Content.Image) top no-repeat; background-size: cover; height: 250px;"></div>
                    <div class="card-block">
                        <h4 class="card-title">@Item.Title</h4>
                        <p class="card-text">@Item.Content.Text</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Рейтинг - 
                            @for (var i = 1; i <= 5; i++)
                            {
                                if (i <= Item.Rate)
                                {
                                    <span>&#9733</span>
                                }
                                else
                                {
                                    <span>&#9734</span>
                                }
                            }
                        </li>
                        <li class="list-group-item"><a href="Quests/QuestPreview/@Item.Id" class="card-link">Подробное описание</a></li>
                    </ul>
                    <div class="card-block">
                        <a href="Quests/AddStage?questId=@Item.Id" class="card-link  btn btn-primary">Играть</a>
                        <a href="Quests/EditQuest/@Item.Id" class="card-link">Редактировать</a>
                        <a href="Quests/RemoveQuest/@Item.Id" class="card-link">Удалить</a>
                    </div>
                </div>
            }
        </div>

    </div>
