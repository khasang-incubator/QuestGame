@model QuestGame.WebApi.Areas.Game.Models.QuestViewModel
@using QuestGame.WebApi.Helpers

@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Подробно</h2></div>
        <div class="btn-group">
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default btn-lg" })            
        </div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Owner)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Owner)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Rate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd>
                @Html.Active(Model.Active)
            </dd>            
        </dl>
        
    </div>
</div>

@if (Model.Stages.Count > 0)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-heading"><h2>Сцены</h2></div>
            @Html.ActionLink("Добавить сцену", "Create", "Stage", new { area = "Design", id = @Model.Id }, new { @class = "btn btn-primary btn-lg" })
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Действие
                    </th>
                </tr>
                @foreach (var stage in Model.Stages)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => stage.Value)
                        </td>
                        <td>
                            <a href=@Url.Action("Details", "Stage", new { id = stage.Key }, null)><span class="glyphicon glyphicon-info-sign"></span></a>
                            <a href=@Url.Action("Edit", "Stage", new { id = stage.Key }, null)><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href=@Url.Action("Delete", "Stage", new { id = stage.Key }, null)><span class="glyphicon glyphicon-remove-circle"></span></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

