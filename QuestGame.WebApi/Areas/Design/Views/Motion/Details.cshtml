@model QuestGame.WebApi.Areas.Game.Models.MotionViewModel
@using QuestGame.WebApi.Helpers

@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Подробно</h2></div>
        <div class="btn-group">
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Назад", "Details", "Stage", new { id = Model.OwnerStageId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NextStageId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NextStageId)
            </dd>
            <dd>
                <div class="pull-left" style="margin-right: 10px">
                    <img class="img-thumbnail" width="750" height="750"
                         src="@Model.Image"/>
                </div>
                <div class="panel">
                    <div class="panel-heading">
                        <h3>Редактирование картинки «@Model.Description»</h3>
                    </div>

                    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="panel-body">
                            @Html.HiddenFor(m => m.Id)
                            @foreach (var property in ViewData.ModelMetadata.Properties)
                            {
                                switch (property.PropertyName)
                                {
                                    case "Id":
                                    case "ImageData":
                                    case "ImageMimeType":
                                    case "OwnerStageId":
                                        // Ничего не делать
                                        break;
                                    default:
                                        <div class="form-group">
                                            <label>@(property.DisplayName ?? property.PropertyName)</label>
                                            @if (property.PropertyName == "Description")
                                              {
                                                @Html.TextArea(property.PropertyName, null, new { @class = "form-control", rows = 5 })
                                              }
                                            else
                                              {
                                                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                                              }
                                            @Html.ValidationMessage(property.PropertyName)
                                        </div>
                                        break;
                                 }
                             }
                          <div class="form-group">
                                <div style="position:relative;">
                                    <label>Картинка</label>
                                    <a class='btn' href='javascript:;'>
                                        Выберите файл...
                                        <input type="file" name="Image" size="40" style="position:absolute;z-index:2;top:0; left:0;filter: alpha(opacity=0); opacity:0; background-color:transparent;color:transparent;" onchange='$("#upload-file-info").html($(this).val());'>
                                    </a>
                                    <span class='label label-info' id="upload-file-info"></span>
                                </div>
                                @if (Model.ImageData == null)
                                {
                                    <div class="form-control-static">Нет картинки</div>
                                }
                                else
                                {
                                    <img class="img-thumbnail" width="150" height="150"
                                         src="@Url.Action("GetImage", "Game", new { Model.Description })" />
                                }
                            </div>
                        </div>
                        <div class="panel-footer">
                            <input type="submit" value="Сохранить" class="btn btn-primary" />
                            @Html.ActionLink("Отменить изменения и вернуться к списку", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    }
                </div>
            </dd>
        </dl>
    </div>
</div>
